@model IEnumerable<AspAssignment.Models.Order>

@{
    ViewData["Title"] = "List of Orders";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"rel="stylesheet"/>
</head>

<body>
       <style>
          body{  
  font-family: Calibri, Helvetica, sans-serif;  
  background-color: pink;  
}  

</style>
	
	<nav class="navbar navbar-expand navbar-dark bg-success">
	<div class="container-fluid">
		<a class="navbar-brand" asp-area="RestaurantSite" asp-controller="Restaurant">
			<img src ="~/Images/logo.jpg" style="width:35px" />Desert Moon</a>
		<ul class="navbar-nav me-auto mb-2 mb-lg-0">
			
		<!-- NAVBAR LINKS -->
		<li class="nav-item">
<a class="nav-link text-dark" asp-area="" asp-page="/Index1">Home</a>		
</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-page="/Index6">About Us</a>
		</li>
		<li class="nav-item">
	<a class="nav-link text-dark" asp-area="" asp-page="/Index3">Reservation</a>	
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-page="/Index2">Contact</a>	
		</li>
			 <li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-page="/Index7">View Menus</a>	
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" 
                                asp-area="ManageTable" asp-controller="Home" asp-action="Index">View Orders</a>
		</li>
			
		
			
			<!-- DROPDOWN OPTIONS -->
			 <li class="nav-item dropdown">
 <li class="nav-item dropdown">
 <button type="button" class="btn btn-primary">Manage</button>
  <button type="button" class="btn btn-prim dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="sr-only">Toggle Dropdown</span>
	</button>    
                            <div class="dropdown-menu">
                                <a class="dropdown-item" 
                                   asp-area="RestaurantSite" asp-controller="Categories" asp-action="Index">Categories</a>
                                <a class="dropdown-item"
                                   asp-area="RestaurantSite" asp-controller="Menus" asp-action="Index">Menus</a>

                                    <a class="dropdown-item" 
                                   asp-area="RestaurantSite" asp-controller="Customers" asp-action="Index">Customers</a>
                                 <a class="dropdown-item" 
                                   asp-area="RestaurantSite" asp-controller="Orders" asp-action="Index">Orders</a>
                                 <a class="dropdown-item" 
                                   asp-area="RestaurantSite" asp-controller="Payments" asp-action="Index">Payments</a>
                                
                            </div>
                        </li>
                        </ul>
		<!-- SEARCH BOX -->
		<form class="d-flex">
		<input
			class="form-control me-2"
			type="search"
			placeholder="Search site"
		/>
		<button class="btn btn-primary"
				type="submit">
			Search
		</button>
		</form>
	</div>
	</nav>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
      <h1 style="color:darkmagenta" >@ViewData["Title"]</h1>  


<p>
    <button type="button" class="btn btn-primary"> <a style="color:black" asp-action="Create">Create New</a> </button>
    &nbsp; | &nbsp;
   <button type="button" class="btn btn-warning"> <a style="color:black" asp-area="RestaurantSite" asp-controller="Menus" asp-action="Index"> View Menus</a> </button>
   
</p>
<hr/>
<table class="table">
    <thead>
        <tr class="alert-warning">
            
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.TableName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.IsEnabled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="alert-info">
           
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.TableName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.DishName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.IsEnabled)
            </td>
            <td>
                <button type="button" class="btn btn-primary">  <a style="color:black" asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> </button> |
              <button type="button" class="btn btn-success">  <a style="color:black" asp-action="Details" asp-route-id="@item.OrderId">Details</a> </button> |
               <button type="button" class="btn btn-danger"> <a style="color:black" asp-action="Delete" asp-route-id="@item.OrderId">Delete</a> </button>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
