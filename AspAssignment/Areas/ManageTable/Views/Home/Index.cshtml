@if(Model != null && Model.Orders != null)
{
    <form method="post">
        <input type="hidden" asp-for="CategoryId" />

        <div class="card-columns mt-3">
            @foreach(var item in Model.Orders) 
            {
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title"> Order Status : @item.OrderStatus   </h2>
                        <h4 class="card-title"> @item.TableName</h4>
                        <h4 class="card-title"> Dishes : @item.Quantity</h4>
                    </div>
                     <div class="card-footer">
                        <select asp-for="Quantity">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                           <button type="button" class="btn btn-primary"> <a class="btn btn-primary" asp-area="RestaurantSite" asp-controller="Payments" asp-action="Create">Checkout</a> </button>

                       
                    </div>
                </div>
               
            }
        </div>
    </form>
}
